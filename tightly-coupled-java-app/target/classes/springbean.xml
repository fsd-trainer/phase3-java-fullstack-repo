<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
		
	<!--  four properties - textMsg, senderNAme, audio, video -->
	<bean name="messageServiceBean" class="com.abc.training.spring.MessageService1">
	
	<!--  setter method of a property -->   
	   <property name="senderName" value="Jill Rock"></property>
		   
		   <!--  invoke parameterized constructor -->
	   <constructor-arg name="textMsg" value="Hi, Good Evening!"/>
	
	</bean>
	
	
</beans>
        
        
        
        
 